{
  "name": "coregov-www",
  "version": "0.1.0",
  "private": true,
  "author": "notsegfault",
  "scripts": {
    "dev": "cross-env HOST=0.0.0.0 next dev",
    "build": "yarn generate:manifest && next build",
    "static:build": "yarn build && next export",
    "static:start": "yarn static:build && cd out && http-server",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && yarn format",
    "format": "prettier --write src",
    "up-latest": "yarn upgrade-interactive --latest",
    "prepare": "husky install",
    "generate:manifest": "node tools/generateManifest.js"
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.0.15",
    "@chakra-ui/react": "^1.6.7",
    "@emotion/cache": "^11.4.0",
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@fontsource/inter": "^4.5.0",
    "@react-icons/all-files": "^4.1.0",
    "@types/numeral": "^2.0.1",
    "@usedapp/core": "^0.4.7",
    "@web3-react/abstract-connector": "^6.0.7",
    "@web3-react/core": "^6.1.9",
    "@web3-react/injected-connector": "^6.0.7",
    "@web3-react/network-connector": "^6.1.9",
    "@web3-react/walletconnect-connector": "^6.2.4",
    "@web3-react/walletlink-connector": "^6.2.5",
    "cross-env": "^7.0.3",
    "framer-motion": "^4.1.17",
    "husky": "^7.0.2",
    "moment": "^2.29.1",
    "nanoid": "^3.1.25",
    "next": "^11.1.2",
    "next-build-id": "^3.0.0",
    "next-images": "^1.8.1",
    "next-seo": "^4.26.0",
    "numeral": "^2.0.6",
    "react": "^17.0.2",
    "react-blockies": "^1.4.1",
    "react-device-detect": "^1.17.0",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-moment": "^1.1.1"
  },
  "devDependencies": {
    "@types/react": "^17.0.20",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.2",
    "eslint-config-sznm": "^0.1.7",
    "http-server": "^13.0.1",
    "lint-staged": "^11.1.2",
    "next-sitemap": "^1.6.168",
    "prettier": "^2.4.0",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ],
    "src/**/*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
